---
import BlogLayout from "../layouts/BlogLayout.astro";
const postsList = await Astro.glob("../pages/posts/*.md");
---

<BlogLayout title="Blog entries">
  <h1>Blog entries</h1>
  <ul>
    {
      postsList.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ul>
</BlogLayout>
