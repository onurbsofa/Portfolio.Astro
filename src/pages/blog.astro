---
import PostLayout from "../layouts/PostLayout.astro";
const postsList = await Astro.glob("../pages/posts/*.md");
---

<PostLayout title="Blog entries">
  <h1>Blog entries</h1>
  <ul>
    {
      postsList.map((post) => (
        <li>
          <a href={post.url}>
            {post.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ul>
</PostLayout>
