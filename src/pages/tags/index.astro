---
import BaseLayout from "../../layouts/BlogLayout.astro";
import Tag from "../../blogComponents/Tags/Tags.astro";
const postList = await Astro.glob("../posts/*.md");

const tagList = [
  ...new Set(postList.map((post) => post.frontmatter.tags).flat()),
];
const pageTitle = "Categor√≠as";
---

<BaseLayout title={pageTitle}>
  <ul className="tag-list-container">
    {tagList.map((tag) => <Tag tagName={tag} />)}
  </ul>
</BaseLayout>
