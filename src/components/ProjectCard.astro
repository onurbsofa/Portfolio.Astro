---
const { title, desc, img, link } = Astro.props;
---

<div
  class="rounded-lg bg-base-100 shadow-md hover:shadow-xl transition ease-in-out hover:scale-[101%] h-[26rem] group"
>
  <div class="p-4 flex-col items-start">
    <img
      src={img}
      alt={title}
      class="w-full h-[20rem] object-cover rounded-lg mb-4"
    />
    <a
      href={link}
      class="text-white-500 hover:text-blue-700 transition-colors duration-200 ease-in"
    >
      <h2 class="text-2xl font-bold mb-2">{title}</h2>
    </a>
    <div
      class="transform scale-y-0 transition-all duration-200 ease-in group-hover:scale-y-100"
    >
      <p class="text-base text-white-600 mb-4 group-hover:block">{desc}</p>
    </div>
  </div>
</div>

<style></style>
