---
const {
    title,
    desc,
    img,
    link
} = Astro.props;
---
<div class="rounded-lg bg-base-100 shadow-md hover:shadow-xl transition ease-in-out hover:scale-[101%] h-[30rem]">
    <div class="p-4 flex-col items-start">
        <img src={img} alt={title} class="w-full h-[20rem] object-cover rounded-lg mb-4" />
        <h2 class="text-2xl font-bold mb-2">{title}</h2>
        <p class="text-base text-white-600 mb-4">{desc}</p>
        <a href={link} class="text-base text-blue-500 hover:text-blue-700">Learn More</a>
    </div>
</div>