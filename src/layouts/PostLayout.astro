---
import BlogLayout from "./BlogLayout.astro";
 import PostImage from "../blogComponents/PostImage/PostImage.astro"; 
const { frontmatter } = Astro.props;
const { url, alt } = frontmatter.image;
---

<BlogLayout title={frontmatter.title}>
 <PostImage url={url} alt={alt} /> 
  <div class="nes-container is-dark with-title">
    <p class="title">{frontmatter.title}</p>
    <slot />
  </div>
  <p>Publicado el: {frontmatter.pubDate.slice(0, 10)}</p>
  <p>Autor: {frontmatter.author}</p>
</BlogLayout>
