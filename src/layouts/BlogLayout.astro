---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "nes.css/css/nes.min.css";
import Footer from "../blogComponents/Footer/Bfooter.astro";
import Navar from "../blogComponents/navigation/Navigation.astro";
import Hamburger from "../blogComponents/Hamburger/Hamburger.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Hamburger />
      <Navar />
    </header>

    <main>
      <slot />
    </main>

    <Footer />
    <link rel="stylesheet" href="/styles/global.css" />
    <script src="../scripts/menuHamburger.js"></script>
  </body>
</html>